generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
  shadowDatabaseUrl = env("POSTGRES_URL_NON_POOLING") // used for migrations
}

model colleagues {
  id                String              @id
  email             String              @unique
  name              String?
  picture_url       String?
  created_at        DateTime            @default(now())
  updated_at        DateTime            @updatedAt
  roles_id          Int
  role              roles               @relation(fields: [roles_id], references: [id])
  colleagues_skills colleagues_skills[]
}

model roles {
  id         Int          @id @default(autoincrement())
  name       String       @unique
  created_at DateTime     @default(now())
  updated_at DateTime     @updatedAt
  colleagues colleagues[]
}

model skills {
  id                Int                 @id @default(autoincrement())
  name              String              @unique
  created_at        DateTime            @default(now())
  updated_at        DateTime            @updatedAt
  categories_id     Int
  colleagues_skills colleagues_skills[]
}

model colleagues_skills {
  id           Int        @id @default(autoincrement())
  colleague_id String
  skill_id     Int
  ability      Int
  interest     Int
  created_at   DateTime   @default(now())
  updated_at   DateTime   @updatedAt
  colleague    colleagues @relation(fields: [colleague_id], references: [id])
  skill        skills     @relation(fields: [skill_id], references: [id])
}

model categories {
  id   Int    @id @default(autoincrement())
  name String @unique
}
